<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    tools:context="com.example.testbuttons.MainActivity"
    android:orientation="vertical" 
    android:gravity="center_horizontal" >


	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="21dp" >
        
		<ImageButton
			android:id="@+id/ibTrial1pass"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:src="@drawable/btn_g1"  />
	</LinearLayout>
	    
	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="21dp" >

        		        
		<ImageButton
			android:id="@+id/ibTrial2pass"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:src="@drawable/btn_g5" />

	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/linearLayout3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="21dp" >

        		        
			<ImageButton
				android:id="@+id/ibTrial3pass"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:src="@drawable/btn_g9" />

	    </LinearLayout>

	    <ImageButton
	        android:id="@+id/ibLeave"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/leavel" />
	   

	    		
	    <LinearLayout
			android:id="@+id/linearLayout6"
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="21dp" >
			
	    <ImageButton
			android:id="@+id/ibTrialstop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:src="@drawable/btn_rs"
			android:onClick="onStopClick" />
	        	    
	    <ImageButton
		        android:id="@+id/ibBack"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_back" />
	    
	    <ImageButton
		        android:id="@+id/ibSave"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_save" />
	     </LinearLayout>

	    <Button
	        android:id="@+id/ibNext"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="NEXT" />

	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:textColor="#000000" />

</LinearLayout>
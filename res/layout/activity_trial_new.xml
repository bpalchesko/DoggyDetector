<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:columnCount="2"
    android:orientation="horizontal"
    tools:context=".TrialActivityNew" >

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="1" />

    <Button
        android:id="@+id/NewTrialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_row="1"
        android:background="#D6D6D6"
        android:text="@string/start_new_trial"
        android:textColor="#000000"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/Configuration"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="125dp"
        android:layout_row="1"
        android:text="@string/configuration_"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/Control"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="200dp"
        android:layout_row="1"
        android:text="@string/control"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/Benign"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="275dp"
        android:layout_row="1"
        android:text="@string/benign"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/MalignantText"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="350dp"
        android:layout_row="1"
        android:text="@string/malignant"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/Dog"
        android:layout_column="0"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="75dp"
        android:layout_row="1"
        android:text="@string/dog_"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/Tester"
        android:layout_column="0"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="375dp"
        android:layout_row="1"
        android:text="@string/tester_"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="35sp" />

    <Button
        android:id="@+id/Begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_row="1"
        android:background="#D6D6D6"
        android:text="@string/begin"
        android:textColor="#000000"
        android:textSize="50sp"
        android:onClick="onBeginButtonClick" />

</GridLayout>